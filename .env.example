# Database connection URL
DATABASE_URL=sqlite://data/bus_scraper.db?mode=rwc

# Seed routes catalog from Highway Bus API (run once, before SEED_FROM_ENV)
# Set to true to populate all available routes and stations for area 1 (Tokyo/Shinjuku)
# This creates the routes/stations reference data needed for validation
SEED_ROUTES_CATALOG=false

# Seed database from .env on first run (default: false)
# Set to true to migrate existing .env configuration to database
# Requires SEED_ROUTES_CATALOG to have been run first for route validation
SEED_FROM_ENV=false

# Base URL of the Highway Bus website (with /gp path)
BASE_URL=https://www.highwaybus.com/gp

# Scraping interval in seconds (default: 300 = 5 minutes)
SCRAPE_INTERVAL_SECS=300

# Area ID (1 = Tokyo/Shinjuku area)
AREA_ID=1

# Route ID (REQUIRED)
# Examples:
#   110 = Shinjuku-Fuji Five Lakes (新宿～富士五湖線)
#   155 = Shinjuku-Kamikochi (新宿～上高地線)
ROUTE_ID=155

# Departure station code (REQUIRED)
# Example: 001 = Busta Shinjuku
DEPARTURE_STATION=001

# Arrival station code (REQUIRED)
# Examples:
#   064 = Kawaguchiko Station (富士五湖)
#   498 = Kamikochi Bus Terminal (上高地)
ARRIVAL_STATION=498

# Date range for searching availability
# Formats: YYYY-MM-DD (ISO 8601) or YYYYMMDD
# Examples:
#   DATE_START=2025-10-29  or  DATE_START=20251029
#   DATE_END=2025-11-05    or  DATE_END=20251105
# Defaults: today to today+7 days if not specified
DATE_START=2025-10-12
DATE_END=2025-10-19

# Time filter (optional) - only show buses within this time range
# Format: HH:MM (24-hour)
# Leave empty to show all buses
DEPARTURE_TIME_MIN=06:00
DEPARTURE_TIME_MAX=10:00

# Passenger counts (detailed categories)
# Total must be 1-12 passengers
ADULT_MEN=1
ADULT_WOMEN=0
CHILD_MEN=0
CHILD_WOMEN=0
HANDICAP_ADULT_MEN=0
HANDICAP_ADULT_WOMEN=0
HANDICAP_CHILD_MEN=0
HANDICAP_CHILD_WOMEN=0

# Discord webhook URL (optional)
# Get it from Discord: Server Settings → Integrations → Webhooks → Create Webhook
# Leave empty to disable notifications
DISCORD_WEBHOOK_URL=

# Notify only on state change (default: true)
# true = send notification only when availability changes
# false = send notification on every check if buses are available
NOTIFY_ON_CHANGE_ONLY=true
