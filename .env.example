# Base URL of the Highway Bus website (with /gp path)
BASE_URL=https://www.highwaybus.com/gp

# Scraping interval in seconds (default: 300 = 5 minutes)
SCRAPE_INTERVAL_SECS=300

# Area ID (1 = Tokyo/Shinjuku area)
AREA_ID=1

# Route ID (REQUIRED)
# Examples:
#   110 = Shinjuku-Fuji Five Lakes (新宿～富士五湖線)
#   155 = Shinjuku-Kamikochi (新宿～上高地線)
ROUTE_ID=155

# Departure station code (REQUIRED)
# Example: 001 = Busta Shinjuku
DEPARTURE_STATION=001

# Arrival station code (REQUIRED)
# Examples:
#   064 = Kawaguchiko Station (富士五湖)
#   498 = Kamikochi Bus Terminal (上高地)
ARRIVAL_STATION=498

# Date range for searching availability (YYYYMMDD format)
# Defaults: today to today+7 days if not specified
DATE_START=20251012
DATE_END=20251019

# Time filter (optional) - only show buses within this time range
# Format: HH:MM (24-hour)
# Leave empty to show all buses
DEPARTURE_TIME_MIN=06:00
DEPARTURE_TIME_MAX=10:00

# Passenger counts (detailed categories)
# Total must be 1-12 passengers
ADULT_MEN=1
ADULT_WOMEN=0
CHILD_MEN=0
CHILD_WOMEN=0
HANDICAP_ADULT_MEN=0
HANDICAP_ADULT_WOMEN=0
HANDICAP_CHILD_MEN=0
HANDICAP_CHILD_WOMEN=0
